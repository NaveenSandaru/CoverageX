generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tasks {
  task_id          Int      @id @default(autoincrement())
  task_title       String
  task_description String
  deadline         DateTime
  created          DateTime @default(now())
  finished         Boolean  @default(false)

  @@map("tasks")
  @@index([deadline], name: "idx_tasks_deadline")
  @@index([finished], name: "idx_tasks_finished")
}
